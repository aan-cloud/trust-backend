generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          String @id @default(uuid()) @db.Uuid
  name        String @unique
  slug        String @unique
  image_url   String
  description String
  price       Int
  stock       Int

  category   categories? @relation(fields: [categoryId], references: [id])
  categoryId String?     @db.Uuid

  created_at DateTime  @default(now())
  updated_at DateTime?
}

model categories {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique
  slug String @unique

  products products[]

  created_at DateTime  @default(now())
  updated_at DateTime?
}
