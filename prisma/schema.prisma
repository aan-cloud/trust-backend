generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id String @id @default(uuid()) @db.Uuid
  name String
  slug String
  image_url String
  description String
  price Int
  category String
  stock Int
  created_at DateTime
  updated_at DateTime
}